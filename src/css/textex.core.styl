@import '_common'

.{$prefix}core
	position   : relative
	background : #fff

	.{$prefix}wrap
		position : absolute

		textarea
			border_box()
			vendor('transition', 0.2s ease-in-out)
			round_corners(0px)
			border      : 1px solid $border
			outline     : none
			resize      : none
			position    : absolute
			z-index     : 1
			background  : none
			overflow    : hidden
			margin      : 0
			padding     : 3px 5px 4px 5px
			white-space : nowrap
			font        : $font

			&:focus
				vendor('box-shadow', 0px 0px 6px $selected)

