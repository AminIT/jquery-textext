.autosuggest 
	position   : relative
	background : #fff

	.wrap
		position : absolute

		.tags
			position   : absolute
			width      : 100%
			height     : 100%
			z-index    : 1
			padding    : 3px 35px 3px 5px
			box-sizing : border-box

			.tag
				float : left

				button
					float      : left
					border     : 1px solid blue
					background : blue
					color      : white
					padding    : 0
					margin     : 0 3px 3px 0

		textarea
			position   : absolute
			box-sizing : border-box
			z-index    : 2
			background : none
			overflow   : hidden
			margin     : 0
			padding    : 3px 5px
			resize     : none

